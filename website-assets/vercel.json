{
  "public": true,
  "buildCommand": "cd website-assets && npm run build",
  "outputDirectory": "website-assets/.next",
  "installCommand": "cd website-assets && npm install",
  "headers": [
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400"
        },
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/app",
      "dest": "https://webkraft.dev", 
      "status": 302
    }
  ]
}