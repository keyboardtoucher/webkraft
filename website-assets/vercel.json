{
  "public": true,
  "builds": [
    {
      "src": "website-assets/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/website-assets/public/css/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400, s-maxage=86400"
      }
    },
    {
      "src": "/fonts/(.*)", 
      "dest": "/website-assets/public/fonts/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/app",
      "dest": "https://webkraft.dev",
      "status": 302
    },
    {
      "src": "/(.*)",
      "dest": "/website-assets/$1"
    }
  ]
}